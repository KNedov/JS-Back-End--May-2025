{{setTitle "Details Page"}}
<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card-details">

                <h1>Model: {{car.model}}</h1>
                <h3>Posted by: {{ownerName}}</h3>

                <div class="card-specs">
                    <p class="card-manufacturer">Manufacturer:
                        {{car.manufacturer}}</p>
                    <p class="card-engine">Engine Type: {{car.engine}}</p>
                    <p class="card-top-speed">Top Speed: {{car.topSpeed}}</p>
                </div>

                <p class="disc">
                    Description:
                    {{car.description}}</p>

                {{#if isAuthenticated}}
                    <div class="social-btn">
                        {{#if isOwner}}
                            <a href="/cars/{{car.id}}/edit" class="edit-btn">Edit</a>
                            <a href="/cars/{{car.id}}/delete" class="del-btn">Delete</a>
                        {{else}}
                            {{#if isLiked}}
                                <p class="you-liked">Thanks For The Like</p>
                            {{else}}
                                <a href="/cars/{{car.id}}/like" class="like-btn">Like</a>
                            {{/if}}
                        {{/if}}
                    </div>
                {{/if}}

            </div>
        </div>
        <div class="card_right">
            <img
                src="{{car.image}}"
                alt="{{car.model}}"
            />
        </div>
    </div>
</section>

<section id="likes">
    <div class="like-info">
        <div class="card_left">
            <div class="card-details">
                   
                <h1>Likes</h1>
                <div class="card-like">
                    <p class="PV">Total likes: {{count car.likes}}</p>
                </div>
                  {{#if  notLikes}}
                <p class="disc"> People who liked the post -No one has liked
                    yet.</p>
                    {{else}}
                   
                <!-- If there are already people who have cast their like for the post, separate their emails with a comma and a space ", " -->
                <p class="disc">People who liked the post - {{likedByEmail}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>