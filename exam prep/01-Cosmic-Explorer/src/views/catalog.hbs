{{setTitle 'Catalog Page'}}
{{#each planets}}
        <div class="planet-card" id="planet1">
            <img
                src="{{image}}">
            <h3>{{name}}</h3>
            <p>Solar System: {{solarSystem}}</p>
            <a class='detail-btn' href='/planets/{{id}}/details'>Details</a>
        </div>
       
        {{else}}
        <!-- Repeat the block for more planets -->
        <p class="no-post">There are no planets found yet!</p>

    {{/each}}

    